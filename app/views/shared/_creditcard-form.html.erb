<%= form_with url:creditcards_path, method: :post, html: { name: "inputForm" },class:"form" do |f| %>
  <div class="form__upper">
    <div class="form__upper__group">
      <%= f.label :カード番号 %>
      <span class="form-require">必須</span>
      <%= f.text_field :card_number, name: "card_number", id:"card_number", type: "text", placeholder: '半角数字のみ', class: 'input-default', maxlength: "16" %>
      <ol>
        <li>
          <object data="<%= asset_path 'creditcards/visa.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
        <li>
          <object data="<%= asset_path 'creditcards/master-card.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
        <li>
          <object data="<%= asset_path 'creditcards/jcb.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
        <li>
          <object data="<%= asset_path 'creditcards/american_express.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
        <li>
          <object data="<%= asset_path 'creditcards/dinersclub.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
        <li>
          <object data="<%= asset_path 'creditcards/discover.svg' %>" height="20" type="image/svg+xml" width="35"></object>
        </li>
      </ol>
    </div>
    <div class="form__upper__group exp">
      <div class="name">
        <%= f.label :有効期限 %>
        <span class="form-require">必須</span>
      </div>
      <%= f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]], {}, class: 'input-default harf', name: "exp_year", id:"exp_year" %>
      <span>年</span>
      <%= f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{}, class: 'input-default harf', name: "exp_month", id:"exp_month" %>
      <span>月</span>
    </div>
    <div class="form__upper__group">
      <%= f.label :セキュリティーコード %>
      <span class="form-require">必須</span>
      <%= f.text_field :cvc, name: "cvc", id:"cvc", class:"cvc", type: "text", placeholder: 'カード背面4桁もしくは3桁の番号', class: 'input-default', maxlength: "16" %>
    </div>
    <div class="form__upper__group">
      <%= f.submit '次へ進む', class: 'btn-default', id: "charge-form" %>
    </div>
  </div>
<% end %>