<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Product</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
      <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>

  <h2>Add Product</h2>
  <div class="table-responsive">

  <%= form_for(@admin_product, url:{controller:'admin_products', 
      action:'create'}) do |form| %>
    <div class="form-group">
      <label for="callput">コール/プット</label>
      <%= form.text_field :callput,{class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="brand_id">銘柄</label>
      <%= form.text_field :brand_id,{class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="settlement_date">満期日</label>
      <%= form.date_field :settlement_date,{class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="closing_date">購入締切日</label>
      <%= form.date_field :closing_date,{class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="exercise_price">行使価格</label>
      <%= form.number_field :exercise_price, {class:"form-control"} %>
    </div>
    <div class="form-group">
      <label for="option_premium">オプションプレミアム</label>
      <%= form.number_field :option_premium, {class:"form-control"} %>
    </div>
    <%= form.submit "保存" %>
  <% end %>
  <p class="link"><a href="/admin_products">
      &lt;&lt; ※トップページに戻る</a></p>
  </div>
</main>